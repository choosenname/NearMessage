<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="ButtonColor">#ABA9E3</Color>
    <SolidColorBrush x:Key="ButtonColorBrush" Color="{StaticResource ButtonColor}" />

    <Color x:Key="ButtonBorderColor">#5E6175</Color>
    <SolidColorBrush x:Key="ButtonBorderColorBrush" Color="{StaticResource ButtonBorderColor}" />

    <Color x:Key="HoverButtonColor">#9D9BD0</Color>
    <SolidColorBrush x:Key="HoverButtonColorBrush" Color="{StaticResource HoverButtonColor}" />

    <Color x:Key="PressedButtonColor">#8F8EBF</Color>
    <SolidColorBrush x:Key="PressedButtonColorBrush" Color="{StaticResource PressedButtonColor}" />

    <Color x:Key="EnabledButtonColor">#606060</Color>
    <SolidColorBrush x:Key="EnabledButtonColorBrush" Color="{StaticResource ButtonColor}" />

    <Color x:Key="DisabledButtonColor">#606060</Color>
    <SolidColorBrush x:Key="DisabledButtonColorBrush" Color="{StaticResource DisabledButtonColor}" />

    <Color x:Key="ForegroundButtonColor">#FFFFFF</Color>
    <SolidColorBrush x:Key="ForegroundButtonColorBrush" Color="{StaticResource ForegroundButtonColor}" />

</ResourceDictionary>